<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">17dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="iconTint">@color/iconTint</item>
    </style>

    <style name="CourtDecisionItemStyle">
        <item name="android:background">@drawable/court_decision_item_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="CourtDecisionText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/almarai_light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Theme.Projet_TDM.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


</resources>